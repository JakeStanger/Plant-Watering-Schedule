<div class="col-md-4 col-md-offset-4">
  <h3>Editing: <%= @user_plant.custom_name %></h3>
  <h4>(<%= @user_plant.plant.name %>)</h4>
  <%= bootstrap_form_for(@user_plant) do |f| %>
      <div class="field">
        <%= f.select :plant, Plant.all.collect {|p| [p.name, p.id]} %>
      </div>
      <div class="field">
        <%= f.text_field :custom_name %>
      </div>
      <br>
      <div class="field">
        <%= f.datetime_select :last_watered %>
      </div>
      <br>
      <div class="field">
        <%= f.text_area :notes %>
      </div>
      <div class="actions">
        <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
            <i class="icon-ok icon-white"></i> Save changes
        <% end %>
      </div>
  <% end %>
</div>