<div class="plants">
  <div class="container">
    <div class="row">
      <% @tags.each do |t| %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-image">
                <img class="img-responsive" src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/4-col/img%20%282%29.jpg">
                <span class="card-title"><%= t.name %></span>
              </div>

              <div class="card-content">
                <!--Title-->
                <h5 class="card-title">Contains <b><%= t.plants.length %></b> plants</h5>
              </div>

              <div class="card-action">
                <%= link_to 'View', tag_path(t), class: 'btn' %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>